<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/back_iv"
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@drawable/back_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/center_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风扇"
                android:textColor="#282828"
                android:textSize="@dimen/sp_19"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@drawable/shape_circle_gray"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/center_tv"
                app:layout_constraintLeft_toRightOf="@+id/center_tv"
                app:layout_constraintTop_toTopOf="@+id/center_tv" />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/edit"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/fanlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_bar">

            <ImageView
                android:id="@+id/fanbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/fanbg" />

            <ImageView
                android:id="@+id/leaf_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/fan" />

            <ImageView
                android:id="@+id/swich_iv"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:background="@drawable/select_circle_white"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/swich" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/saofan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:src="@mipmap/ventilation"
            app:layout_constraintLeft_toLeftOf="@+id/fanlay"
            app:layout_constraintTop_toBottomOf="@+id/fanlay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="扫风"
            android:textColor="@color/master_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/saofan"
            app:layout_constraintRight_toRightOf="@+id/saofan"
            app:layout_constraintTop_toBottomOf="@+id/saofan" />

        <ImageView
            android:id="@+id/windspeedstatu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:src="@mipmap/nowinds"
            app:layout_constraintLeft_toLeftOf="@+id/fanlay"
            app:layout_constraintRight_toRightOf="@+id/fanlay"
            app:layout_constraintTop_toBottomOf="@+id/fanlay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="风速"
            android:textColor="@color/master_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/windspeedstatu_iv"
            app:layout_constraintRight_toRightOf="@+id/windspeedstatu_iv"
            app:layout_constraintTop_toBottomOf="@+id/windspeedstatu_iv" />

        <ImageView
            android:id="@+id/modestate_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:src="@mipmap/refrigeration"
            app:layout_constraintRight_toRightOf="@+id/fanlay"
            app:layout_constraintTop_toBottomOf="@+id/fanlay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="模式"
            android:textColor="@color/master_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/modestate_iv"
            app:layout_constraintRight_toRightOf="@+id/modestate_iv"
            app:layout_constraintTop_toBottomOf="@+id/modestate_iv" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/nav_controller_lay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/saow_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_master_air"
                android:clickable="true"
                android:padding="@dimen/dp_14"
                android:src="@mipmap/sweepwind" />

            <ImageView
                android:id="@+id/windspeed_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_weight="1"
                android:background="@drawable/select_master_air"
                android:clickable="true"
                android:padding="@dimen/dp_14"
                android:src="@mipmap/windspeed" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nav_controller_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_55"
            android:layout_marginBottom="@dimen/dp_31"
            android:background="@drawable/shape_corner_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addsure_lay">

            <ImageView
                android:id="@+id/mode_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_master_air"
                android:clickable="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/automaticmode" />

            <ImageView
                android:id="@+id/anion_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_master_air"
                android:clickable="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/anion" />


            <ImageView
                android:id="@+id/timewind_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_master_air"
                android:clickable="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/timewind" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addsure_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFCE6"
            android:padding="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="请尝试3个按钮以上使遥控正确控制电器"
                android:textColor="@color/color333"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toTopOf="@+id/addremotecontrol_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addremotecontrol_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/select_surebtn"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_7"
                android:text="可以用"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/chosemodel_tv" />

            <TextView
                android:id="@+id/chosemodel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_80"
                android:background="@drawable/select_reset"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_7"
                android:text="下一个（1 / 34）"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/addremotecontrol_tv"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
