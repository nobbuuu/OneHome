<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="按键名称"
            android:textColor="@color/black"></TextView>

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_stroke_gray1"
            android:hint="请输入按键名称"
            android:maxLength="10"
            android:padding="@dimen/dp_13"
            android:textSize="@dimen/sp_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_tv"></EditText>

        <View
            android:id="@+id/name_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/divider_bg"
            app:layout_constraintTop_toBottomOf="@+id/name_edt"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_divider">

            <TextView
                android:id="@+id/cancle_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_tipdialog_lb"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:text="取消"
                android:textColor="@color/black"></TextView>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/divider_bg"></View>

            <TextView
                android:id="@+id/sure_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_tipdialog_rb"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:text="完成"
                android:textColor="@color/color_custom"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

