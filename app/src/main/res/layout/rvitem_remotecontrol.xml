<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_30"
    android:paddingBottom="@dimen/dp_30"
    android:background="@drawable/shape_corner_white"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/rmcicon_iv"
        android:layout_width="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/tvicon"
        android:layout_height="@dimen/dp_50"></ImageView>

    <TextView
        android:id="@+id/rmcName_tv"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/rmcicon_iv"
        android:text="电视1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/orange"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/edtname_iv"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/rmcName_tv"
        app:layout_constraintTop_toTopOf="@+id/rmcName_tv"
        app:layout_constraintBottom_toBottomOf="@+id/rmcName_tv"
        android:layout_marginLeft="@dimen/dp_3"
        android:src="@drawable/config_edit_device_name_shape"
        android:layout_height="wrap_content"></ImageView>

    <TextView
        android:id="@+id/brandName_tv"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rmcName_tv"
        app:layout_constraintLeft_toLeftOf="@+id/rmcName_tv"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_12"
        android:text="创维"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:src="@drawable/homepage_dashboard_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>
